<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="root" fx:controller="edu.tseidler.CalculatorController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="5">
    <padding>
        <Insets topRightBottomLeft="15"/>
    </padding>

    <TextField fx:id="firstArgument" GridPane.rowIndex="0"
               GridPane.columnIndex="0"/>
    <TextField fx:id="secondArgument" GridPane.rowIndex="0"
               GridPane.columnIndex="1"/>
    <Button fx:id="searchButton" GridPane.rowIndex="1"
            GridPane.columnIndex="0" text="multiply"/>
    <Label fx:id="myLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <fx:include source="person.fxml" fx:id="person" GridPane.rowIndex="2" GridPane.columnSpan="5"/>
</GridPane>